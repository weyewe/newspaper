<li>
  <h2>
    <%= link_to category.name , "#"%>
    <!-- <a href="http://www.forbes.com/business/">business</a> -->
  </h2>
  <ul class="channel">
    
    <li class="main clearfix">
      
      <%= link_to story_public_url(stories.first) do %>
        <%= image_tag StoryImage.find(:first, :conditions => {
          :image_type => "teaser",
          :story_id => stories.first.id
        }).url, :class => "fleft" %>
      <% end %>
      
      
      <article class="hedbyline">
        <h3>
          <%= link_to stories.first.title, story_public_url( stories.first )%>
        </h3>
        <div class="byline"><%= stories.first.user.profile.name %></div>
      </article>
    </li>
    
    <% for story in stories[1..(stories.count)]%>
      <li>
        <h4>
          <%= link_to story.title, story_public_url(story)%>
        </h4>
        <div class="byline"><%= story.user.profile.name %></div>
      </li>
    <% end %>  
  </ul>
</li>