	<!-- * * * * * * * * * * * * * * * * * * * * * * * * * * -->
	<aside>
		
		<div class="block ad">


		</div>
									
<div class="block most_popular">
  <h2 class="subhed">Most Popular</h2>

  <div style="display: none;" class="loading_spinner">
  </div>



  <div style="overflow: hidden;" class="popular_wrapper" data-url="/ajax/popular/most_popular">
    <ul class="posts" data-viewcount-display="+[number] views" style="display: block;">
      <% for story in Story.find(:all, :limit => 10)%>
        <li>
          
          <%= link_to story_public_url(story) do %>
            <span class="headline"><%= story.title %></span>
          <% end %>
          
          
        </li>
      <% end %>
    </ul>
  </div>

</div>						
																		



		    					    					

	<div class="block ad">
			

	</div>

	<div class="sticky_ad_container">
		<div style="position: relative;" class="position_reference">
			<div style="position: relative; top: 0pt;" class="block ad sticky lastsect">
		
			</div>
		</div>
	</div><!-- end div.sticky_ad_container -->
	
	</aside>
	
	<!-- * * * * * * * * * * * * * * * * * * * * * * * * * * -->
	
	<div id="leftRail" class="fleft clearfix article">
																			
		<div class="body">
			<div class="featured_image" id="slider" >
			  <% if @story.slideshow_images.count == 0 %>
  			  <%= image_tag StoryImage.find(:first, :conditions => {
            :image_type => "story",
            :story_id => @story.id
          }).url %>
        <% else %>

          <%= content_tag :head do %>
            <%= javascript_include_tag "jquery.cycle.all"%> 
          <% end %>
        
          <% for slideshow_image in @story.slideshow_images %>
            <img src="<%= slideshow_image.image_url %>" />
          <% end %>
        <% end %>
			</div> <!-- end of class featured_image -->
			
			<div class="story_body">
			  <%= @story.content.html_safe %>		
			</div>
			
		</div><!-- end div.body -->
		
	
		
								
      <%= render :partial => "share_widget"%>
      <%= render :partial => "related_links"%>
												
							
		
		
		<div id="comments">
		  <h3>
		    Komentari Berita
		  </h3>
		</div>
		
		<div id="fb-root"></div>
    <script src="http://connect.facebook.net/en_US/all.js#xfbml=1"></script>
    <fb:comments href="<%= story_public_url(@story) %>" num_posts="5"
      width="622">
    </fb:comments>
              
                 


