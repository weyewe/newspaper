<div class="user_block type_article_head ">
<a class="avatar" href="#">
  <%= image_tag @story.user.profile.cropped_avatar_url %>
</a>

<p class="user">
			<a href="#"><%= @story.user.profile.name %></a><span class="desc">, Wartawan sableng.com</span>
  	</p>

<p class="about"><%= @story.user.profile.short_description %></p>

<p class="follow">
  
</p>
<div class="arrow"></div>
</div>    				
		<hgroup>
																
										<h5 class="slug"><a href="#"><%= @story.category.name%></a></h5>
			<h6><span class="divider"><!-- | --></span></h6>
		    						<h6>
				<!-- 9/19/2011 @ 7:22PM -->

			    								<span class="divider"><!-- | --></span><!-- 2,016 views -->
